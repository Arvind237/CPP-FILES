// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;
vector <int> nxtper(vector <int> arr,int n)
{
    int ind;
    for(int i=n-2;i>=0;i--)
    {
        if(arr[i]<arr[i+1])
        {
            ind=i;
            break;
        }
    }
    for(int i=n-1;i>ind;i--)
    {
        if(arr[i]>arr[ind])
        {
            swap(arr[ind],arr[i]);
            break;
        }
    }
    reverse(arr.begin()+ind+1,arr.end());
    return arr;
}
int main() {
    vector <int> v={3,1,7,8,6,2,5,4};
    int n=v.size();
    vector<int> v1=nxtper(v,n);
    for(int i=0;i<n;i++)
    {
        cout<<v1[i];
    }
    return 0;
}